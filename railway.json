{
  "$schema": "https://railway.com/railway.schema.json",
  "projects": {
    "default": {
      "services": {
        "frontend": {
          "rootDir": "frontend",
          "build": {
            "builder": "NIXPACKS",
            "buildCommand": "npm run build",
            "startCommand": "npm run preview"
          }
        },
        "backend": {
          "rootDir": "backend",
          "sourceDir": "backend",
          "dockerfilePath": "backend/Dockerfile",
          "build": {
            "builder": "NIXPACKS",
            "buildCommand": "npm run build",
            "startCommand": "npm run start"
          }
        }
      }
    }
  }
}