{
  "name": "plataforma-de-ingressos",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently -k \"yarn --cwd frontend dev\" \"yarn --cwd backend dev\"",
    "build:frontend": "cd frontend && yarn install && yarn build",
    "build:backend": "cd backend && yarn install && yarn build",
    "build": "yarn build:frontend && yarn build:backend",
    "start": "yarn --cwd backend start",
    "postinstall": "yarn build"
  },
  "dependencies": {
    "concurrently": "^8.0.0"
  }
}
