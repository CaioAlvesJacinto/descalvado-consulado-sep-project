{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",            // âœ… Troquei aqui!
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
